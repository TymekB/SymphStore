{% extends 'base.html.twig' %}

{% block body %}

    {% include 'init/messages.html.twig' %}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {{ dump(products) }}
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>${{ product.price }}</td>

                <td><a href="{{ path('cart_delete', {'id': product.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p><b>Total: </b>${{ total }}</p>

    <hr>
    <button class="btn btn-info">Process payment</button>
{% endblock %}