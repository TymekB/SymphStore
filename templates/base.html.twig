<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}SymphStore{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/stripe.css') }}">
            <link rel="stylesheet" href="{{ asset('fonts/fontello/css/fontello.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <h1 class="logo">
                <a href="{{ path('index') }}">
                    Symph<span style="color: #3f6891">Store</span>
                </a>
            </h1>

            {% include 'init/navbar.html.twig' %}
            {% include 'init/searchbar.html.twig' %}

            {% include 'init/messages.html.twig' %}

            {% block body %}
            {% endblock %}

        </div>


        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="https://js.stripe.com/v3"></script>
            <script src="{{ asset('js/stripe.js') }}"></script>
            <script src="{{ asset('js/app.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
