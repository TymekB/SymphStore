{% extends 'base.html.twig' %}

{% block body %}
    <h1>Your order history</h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Total</th>
            <th>Details</th>
        </tr>
        </thead>

        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>

                {% if order.status == 1 %}
                    <td><span class="label label-default">Processing</span></td>
                {% elseif order.status == 2 %}
                    <td><span class="label label-info">Sent</span></td>
                {% else %}
                    <td><span class="label label-success">Received</span></td>
                {% endif %}

                <td>${{ order.totalPrice }}</td>
                <td><a href="{{ path('order_details', {'id': order.id}) }}">Show details</a></td>

            </tr>
        {% endfor %}
        </tbody>
{% endblock %}