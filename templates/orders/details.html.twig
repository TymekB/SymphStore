{% extends 'base.html.twig' %}

{% block body %}
    <h1>Order details</h1>
    <hr>

    <ul class="list-group">
        <li class="list-group-item"><b>ID</b>: {{ order.id }}</li>
        <li class="list-group-item"><b>Status</b>:
            {% if order.status == 1 %}
                <span class="label label-default">Processing</span>
            {% elseif order.status == 2 %}
               <span class="label label-info">Sent</span>
            {% else %}
                <span class="label label-success">Received</span>
            {% endif %}
        </li>
        <li class="list-group-item"><b>Products</b>

            <table class="table table-striped table-condensed">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
                </thead>
                <tbody>
                    {% for orderedProduct in order.orderedProducts %}
                        <tr>
                            <td>{{ orderedProduct.product.name }}</td>
                            <td>{{ orderedProduct.product.price }}</td>
                            <td>{{ orderedProduct.quantity }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </li>
        <li class="list-group-item"><b>Total price</b>: ${{ order.totalPrice }}</li>
    </ul>
{% endblock %}